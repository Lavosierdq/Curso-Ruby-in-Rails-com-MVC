<h1>Novo Article</h1>

<%= form_with model:@article do |form| %>
<% if form.object.errors.any? %>
    <div>
      <% form.object.errors.full_messages.each do |message| %>
        <div>
        <%= message %>
        </div>
      <% end %>
    </div>
<% end %>

  <div>
   <%= form.label :title %>
   <%= form.text_field :title %> 
  </div>

  <%= form.label :body %>
  <%= form.text_field :body %>

  <%= form.button %>
<% end %>
